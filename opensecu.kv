
#:import math math

[ClockNumber@Label]:
    text: str(ctx.i)
    pos_hint: {"center_x": 0.5+0.42*math.sin(math.pi/8*(ctx.i-7)), "center_y": 0.5+0.42*math.cos(math.pi/8*(ctx.i-7))}
    font_size: self.height/24



<DataWindow>:

    # Main windows
    rows:2
    spacing: 10
    padding: 10

    canvas:
        Color:
            rgba: 0.1,0.1,0.1,1
        Rectangle:
            pos: self.pos
            size: self.size


##########################################################

    GridLayout:
        size_hint: 1,1
        cols: 3

#-------------------------- Data -----------------------------#
        #Data
        BoxLayout:
            canvas:
                Color:
                    rgba: 0.11,0.11,0.11,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "I am a Label 3"



#---------------------- Tachometer RPM ------------------------#
        BoxLayout:
            size_hint: 1.5,1

            canvas.before:
                Color:
                    rgba: 0.11,0.11,0.11,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'

                FloatLayout:
                    size_hint:None,None
                    size: (min(self.parent.size) * 0.95 ) , (min(self.parent.size) * 0.95 )
                    ClockNumber:
                        i: 1
                    ClockNumber:
                        i: 2
                    ClockNumber:
                        i: 3
                    ClockNumber:
                        i: 4
                    ClockNumber:
                        i: 5
                    ClockNumber:
                        i: 6
                    ClockNumber:
                        i: 7
                    ClockNumber:
                        i: 8

                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    canvas.before:
                        Color:
                            rgba: 1,1,1,1
                            Rectangle:
                                pos:self.pos
                                size:self.size
                    size_hint:None,None
                    size: (min(self.parent.size) * 0.68 ) , (min(self.parent.size) * 0.68 )

                    Image:
                        source: "resources/gauge.png"
                        size: self.texture_size


                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    canvas.before:
                        Color:
                            rgba: 0.1,0.1,0.1,1
                        Line:
                            width: min(self.size)/15
                            circle:
                                (self.center_x, self.center_y, min(self.width, self.height)
                                / 2, -135, 22.5, 500)
                            cap: 'square'
                    size_hint:None,None
                    size: (min(self.parent.size) * 0.5 ) , (min(self.parent.size) * 0.5 )


                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    canvas.before:
                        Color:
                            rgba: 0,0.93,1,1
                        Line:
                            width: min(self.size)/15
                            circle:
                                (self.center_x, self.center_y, min(self.width, self.height)
                                / 2, -135, -135, 500)
                            cap: 'square'



                    size_hint:None,None
                    size: (min(self.parent.size) * 0.5 ) , (min(self.parent.size) * 0.5 )





#------------------------ Volumetric Efficiency Table -------------------------#

        BoxLayout:
            canvas:
                Color:
                    rgba: 0.11,0.11,0.11,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "I am a Label 3"



###################################################################


#------------------------ Console -------------------------#
    BoxLayout:
        size_hint: 1,0.3
        canvas:
            Color:
                rgba: 0.11,0.11,0.11,1
            Rectangle:
                pos: self.pos
                size: self.size

        TextInput:
            text: "ecu> "
            background_color: 0.11,0.11,0.11,1
            foreground_color: 1,1,1,1
            boold: 1
            padding: 15
